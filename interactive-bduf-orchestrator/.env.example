# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/interactive_bduf_orchestrator"
DATABASE_TEST_URL="postgresql://username:password@localhost:5432/interactive_bduf_orchestrator_test"

# Application Configuration
NODE_ENV="development"
PORT=3000
API_VERSION="v1"

# Authentication & Security
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
SESSION_SECRET="your-super-secret-session-key-change-this-in-production"
BCRYPT_ROUNDS=12

# Redis Configuration (for sessions & caching)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# AI Services Configuration
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"
GOOGLE_AI_API_KEY="your-google-ai-api-key"

# External Services
CONTEXT7_API_KEY="your-context7-api-key"
PERPLEXITY_API_KEY="your-perplexity-api-key"

# GitHub Models (for development)
GITHUB_TOKEN="your-github-token-for-models-access"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@domain.com"
SMTP_PASS="your-email-password"

# File Storage
UPLOAD_MAX_SIZE="10mb"
STORAGE_TYPE="local" # local, s3, gcs
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET=""

# Monitoring & Analytics
SENTRY_DSN=""
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"
CORS_CREDENTIALS=true

# Development Tools
LOG_LEVEL="debug"
ENABLE_REQUEST_LOGGING=true
ENABLE_SQL_LOGGING=false